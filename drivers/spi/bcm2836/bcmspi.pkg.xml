<?xml version="1.0" encoding="utf-8"?>
<!-- TODO: Make sure to set the Package attributes -->
<Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
  Owner="$(OEMNAME)"
  OwnerType="OEM"
  Platform="$(BSPARCH)"
  Component="RPi"
  SubComponent="bcmspi"
  ReleaseType="Production" >

  <Components>
    <Driver InfSource="$(_RELEASEDIR)bcmspi.inf">
      <Reference Source="$(_RELEASEDIR)bcmspi.sys" />
      <Files>
        <!-- For kernel mode drivers, $(DRIVER_DEST) evaluates to "drivers" by default -->
        <!-- For user mode drivers, $(DRIVER_DEST) evaluates to "drivers\umdf" by default -->
        <File Source="$(_RELEASEDIR)bcmspi.sys" DestinationDir="$(runtime.system32)\drivers" />
      </Files>
    </Driver>

  </Components>
</Package>