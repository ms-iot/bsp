      <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.RPi.bcmauxspi.cab">
        <FeatureIDs>
          <FeatureID>RPi_DRIVERS</FeatureID>
        </FeatureIDs>
      </PackageFile>
       <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.RPi.vchiq.cab">
