  </BasePackages>
  <Features>
    <Microsoft />
    <MSFeatureGroups />
    <OEM>
      <!-- Optional Device Drivers -->
      <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.RPi.bcm2836pwm.cab">
        <FeatureIDs>
          <FeatureID>RPi_DRIVERS</FeatureID>
        </FeatureIDs>
      </PackageFile>
      <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.RPi.rpiwav.cab">
        <FeatureIDs>
