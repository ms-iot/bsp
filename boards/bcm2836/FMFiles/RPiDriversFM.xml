      <PackageFile Path="%PKGBLD_DIR%" Name="%OEM_NAME%.RPi.piminiuart.cab">
        <FeatureIDs>
          <FeatureID>RPi_DRIVERS</FeatureID>
        </FeatureIDs>
      </PackageFile>
    </OEM>
    <OEMFeatureGroups />
  </Features>
</FeatureManifest>